<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:background="@drawable/d3d">
<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:height="60dp"
    android:text="@string/firstView"
    android:textStyle="bold"
    android:textColor="#FEFFFFFF"
    android:gravity="center"
    android:textSize="30sp"
    android:id="@+id/firstView" />

<Button
    android:layout_width="@android:dimen/thumbnail_width"
    android:layout_height="wrap_content"
    android:text="@string/firstButton"
    android:textStyle="bold"
    android:id="@+id/firstButton"
    android:singleLine="false"
    android:textSize="25sp"
    android:textColor="#FEFFFFFF"
    android:height="60dp"
    android:contextClickable="false"
    android:allowUndo="false"
    android:background="#431111"
    android:layout_alignParentBottom="true"
    android:layout_alignRight="@+id/firstView"
    android:layout_alignEnd="@+id/firstView" />
</RelativeLayout>

